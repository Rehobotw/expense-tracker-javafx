<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/19"  xmlns:fx="http://javafx.com/fxml/1 " fx:controller="com.expensetracker.controller.LoginController" >
    <children>
        <Label text="MyExpenses" textFill="#030e2e" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="30.0">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" fillWidth="false" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>

                <Label text="Sign In" textFill="#030e2e">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <VBox prefWidth="350.0" spacing="8.0">
                    <children>
                        <Label styleClass="field-label" text="Name" />
                        <TextField fx:id="nameField"  promptText="Your name..." styleClass="input-field">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>

                <VBox prefWidth="350.0" spacing="8.0">
                    <children>
                        <Label styleClass="field-label" text="Password" />
                        <PasswordField fx:id="passwordField" promptText="................" styleClass="input-field">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>
                    </children>
                </VBox>

                <Button fx:id="loginButton" onAction="#handleLoginAction" mnemonicParsing="false" prefHeight="45.0" prefWidth="350.0" styleClass="login-btn" text="Log in">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>

                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Don't have account ?" textFill="#8d9096">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Hyperlink onAction="#handleRegisterAction" styleClass="register-link" text="Register">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Hyperlink>
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>